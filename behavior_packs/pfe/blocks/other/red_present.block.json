{
	"format_version": "1.21.70",
	"minecraft:block": {
		"description": {
			"identifier": "poke:red_present",
			"menu_category": {
				"category": "items"
			},
			"traits": {
				"minecraft:placement_direction": {
					"enabled_states": [
						"minecraft:cardinal_direction"
					]
				}
			}
		},
		"components": {
			"minecraft:display_name": "%poke_pfe.red_present\n%poke_pfe.tag",
			"minecraft:liquid_detection": {
				"detection_rules": [
					{
						"can_contain_liquid": true,
						"liquid_type": "water",
						"on_liquid_touches": "popped"
					}
				]
			},
			"minecraft:collision_box": {
				"origin": [
					-4.25,
					0,
					-4.25
				],
				"size": [
					9.5,
					12.25,
					9.5
				]
			},
			"minecraft:selection_box": {
				"origin": [
					-5,
					0,
					-5
				],
				"size": [
					10,
					12.25,
					10
				]
			},
			"minecraft:destructible_by_mining": {
				"seconds_to_destroy": 1
			},
			"minecraft:destructible_by_explosion": {
				"explosion_resistance": 30
			},
			"tag:pfe": {},
			"tag:axe": {},
			"tag:wood": {},
			"tag:minecraft:wood": {},
			"minecraft:geometry": "geometry.poke_pfe.red_present",
			"minecraft:map_color": "#9b2626",
			"minecraft:material_instances": {
				"*": {
					"texture": "poke_red_present",
					"render_method": "alpha_test",
					"ambient_occlusion": false
				}
			},
			"minecraft:loot": "loot_tables/poke/pfe/present.loot.json"
		},
		"permutations": [
			// Facing north
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'north'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							0,
							0
						]
					}
				}
			},
			// Facing south
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'south'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							180,
							0
						]
					}
				}
			},
			// Facing west
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'east'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							90,
							0
						]
					}
				}
			},
			// Facing east
			{
				"condition": "query.block_state('minecraft:cardinal_direction') == 'west'",
				"components": {
					"minecraft:transformation": {
						"rotation": [
							0,
							-90,
							0
						]
					}
				}
			}
		]
	}
}